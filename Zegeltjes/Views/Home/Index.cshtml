@model Zegeltjes.Models.Aanbiedingen.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="row">
        <h1>Haal aanbiedingen uit jouw buurt op</h1>
        <div class="col-sm-4">

        </div>
        <div class="col-sm-4">
            <form method="get" asp-action="BepaalPlaats" asp-controller="Home">
                <input type="text" class="form-control" placeholder="Postcode of Plaatsnaam" asp-for="Plaats"/>
                <br/>
                <button type="submit" class="btn btn-default">Gaan</button>
            </form>
        </div>
        <div class="col-sm-4">

        </div>
    </div>
</div>
