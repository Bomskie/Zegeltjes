@model Zegeltjes.Models.Account.LoginModel
<div id="LoginDiv" class="container">
    <div class="row">
        <div class="center-block">
            <h1>Inloggen</h1>
        </div>
    </div>
    <div class="row">
        <form name="LoginForm" asp-action="Login" asp-controller="Home" method="post">
            <div class="form-group">
                <label for="LoginMail">E-Mail</label>
                <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="E-mail" asp-for="Mail">
            </div>
            <div class="form-group">
                <label for="LoginPassword">Wachtwoord</label>
                <input type="password" class="form-control" placeholder="Wachtwoord" asp-for="Wachtwoord">
            </div>

            <button type="submit" class="btn btn-primary">Inloggen</button>
        </form>
        <a href="/Register" style="text-decoration:none; color: cadetblue;">Ik heb nog geen account</a><br/>
        <span style="color:red">@Html.ValidationMessage("1")</span>
    </div>    
</div>